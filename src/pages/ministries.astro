---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/Container.astro';
import SectionTitle from '../components/SectionTitle.astro';
const ministries = [
  {
    title: '敬拜与诗歌',
    summary: '在敬拜中亲近神、同心颂赞。'
  },
  {
    title: '门训与牧养',
    summary: '以真理建造生命，彼此扶持成长。'
  },
  {
    title: '本地宣教与关怀',
    summary: '扎根三角区华人社区，传扬福音、关怀邻舍。'
  }
];
---
<BaseLayout title="事工" description="教会事工与参与方式">
  <Container class="py-14 sm:py-20">
    <SectionTitle eyebrow="MINISTRIES" title="事工" subtitle="一起参与服事，在爱中建造。" />

    <div class="mx-auto mt-12 grid max-w-5xl gap-6 md:grid-cols-3">
      {ministries.map((m) => (
        <article class="rounded-3xl border border-black/10 bg-white/40 p-7 shadow-soft">
          <h3 class="font-serif text-2xl text-ink-950">{m.title}</h3>
          <p class="mt-4 text-sm leading-7 text-ink-900/70">{m.summary}</p>
        </article>
      ))}
    </div>
  </Container>
</BaseLayout>
