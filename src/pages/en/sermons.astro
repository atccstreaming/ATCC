---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/Container.astro';
import SectionTitle from '../../components/SectionTitle.astro';

const sermons = [
  {
    title: 'Sample Sermon: Returning to the Center of the Gospel',
    speaker: 'Speaker: Preacher Xinhua Zou',
    date: '2026-01-05',
    verse: 'Matt 9:37–38',
    summary: 'The harvest is plentiful, but the laborers are few. Let us be renewed and sent into the harvest.'
  },
  {
    title: 'Sample Sermon: Loving One Another and Building Together',
    speaker: 'Speaker: Church Team',
    date: '2026-01-12',
    verse: 'John 13:34–35',
    summary: 'Centered on Christ’s love, we grow in a community of mutual care.'
  }
];
---
<BaseLayout title="Sermons" description="Sermons and resources">
  <Container class="py-14 sm:py-20">
    <SectionTitle eyebrow="SERMONS" title="Sermons" subtitle="Resources will continue to be updated." />

    <div class="mx-auto mt-6 flex max-w-4xl flex-wrap gap-3">
      <a
        href="https://www.youtube.com/@AgapeTriangleChineseChurch"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center rounded-full bg-cinnabar-500 px-5 py-2.5 text-sm font-medium text-white shadow-soft transition hover:bg-cinnabar-600"
      >
        Visit our YouTube channel
      </a>
    </div>

    <div class="mx-auto mt-12 max-w-4xl space-y-4">
      {sermons.map((s) => (
        <article class="rounded-3xl border border-black/10 bg-white/40 p-7 shadow-soft">
          <h3 class="font-serif text-2xl text-ink-950">{s.title}</h3>
          <div class="mt-2 text-xs text-ink-900/60">{s.date} · {s.speaker} · {s.verse}</div>
          <p class="mt-4 text-sm leading-7 text-ink-900/70">{s.summary}</p>
        </article>
      ))}
    </div>
  </Container>
</BaseLayout>
