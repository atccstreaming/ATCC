---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/Container.astro';
import SectionTitle from '../../components/SectionTitle.astro';
import { getSite } from '../../content/site';
import { withBasePath } from '../../i18n';

const site = getSite('en');
---
<BaseLayout title="About">
  <Container class="py-14 sm:py-20">
    <SectionTitle eyebrow="ABOUT" title="About" subtitle={site.description} />

    <div class="mx-auto mt-12 max-w-4xl space-y-10">
      <section class="rounded-3xl border border-black/10 bg-white/40 p-7 shadow-soft">
        <h3 class="font-serif text-2xl text-ink-950">Our Mission</h3>
        <p class="mt-3 text-sm leading-7 text-ink-900/70">{site.mission.intro}</p>
        <ul class="mt-5 list-disc space-y-2 pl-5 text-sm leading-7 text-ink-900/70">
          {site.mission.bullets.map((b) => (
            <li>{b}</li>
          ))}
        </ul>
        <p class="mt-5 text-sm leading-7 text-ink-900/70">{site.mission.closing}</p>
      </section>

      <section class="rounded-3xl border border-black/10 bg-white/40 p-7 shadow-soft">
        <h3 class="font-serif text-2xl text-ink-950">Purpose</h3>
        <p class="mt-3 text-sm leading-7 text-ink-900/70">{site.purpose.title}</p>
        <div class="mt-6 grid gap-5 md:grid-cols-3">
          {site.purpose.items.map((it) => (
            <div class="rounded-2xl border border-black/5 bg-parchment-50 p-5">
              <div class="font-medium text-ink-950">{it.title}</div>
              <div class="mt-2 text-sm leading-7 text-ink-900/70">{it.text}</div>
            </div>
          ))}
        </div>
      </section>

      <section class="rounded-3xl border border-black/10 bg-white/40 p-7 shadow-soft">
        <h3 class="font-serif text-2xl text-ink-950">Statement of Faith</h3>
        <div class="mt-6 space-y-4">
          {site.beliefs.map((b) => (
            <div class="rounded-2xl border border-black/5 bg-parchment-50 p-5">
              <div class="font-medium text-ink-950">{b.title}</div>
              <div class="mt-2 text-sm leading-7 text-ink-900/70">{b.text}</div>
            </div>
          ))}
        </div>
      </section>

      <section class="rounded-3xl border border-black/10 bg-white/40 p-7 shadow-soft">
        <h3 class="font-serif text-2xl text-ink-950">Leadership</h3>
        <div class="mt-5 flex items-center gap-4">
          <img
            src={withBasePath('/images/pastor.png')}
            alt={`${site.leader.name} photo`}
            class="h-20 w-20 rounded-3xl object-cover ring-1 ring-black/10"
            loading="lazy"
          />
          <div>
            <div class="font-medium text-ink-950">{site.leader.name}</div>
            <div class="mt-1 text-sm text-ink-900/60">{site.leader.role}</div>
          </div>
        </div>
        <div class="mt-4 space-y-4">
          {site.leader.bio.map((p) => (
            <p class="text-sm leading-7 text-ink-900/70">{p}</p>
          ))}
        </div>
      </section>
    </div>
  </Container>
</BaseLayout>
