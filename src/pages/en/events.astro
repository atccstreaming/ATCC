---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/Container.astro';
import SectionTitle from '../../components/SectionTitle.astro';

const events = [
  {
    title: 'Wednesday Prayer Meeting',
    when: 'Every Wednesday 7:30 – 8:30pm',
    where: 'Church / Online (if available)',
    summary: 'Pray together and support one another.'
  },
  {
    title: 'Friday Bible Study & Sharing',
    when: 'Every Friday 7:30 – 9:00pm',
    where: 'Church',
    summary: 'Study Scripture, share, and pray together.'
  }
];
---
<BaseLayout title="Events" description="Upcoming events">
  <Container class="py-14 sm:py-20">
    <SectionTitle eyebrow="EVENTS" title="Events" subtitle="Join church life and grow together." />

    <div class="mx-auto mt-12 grid max-w-5xl gap-6 md:grid-cols-2">
      {events.map((e) => (
        <article class="rounded-3xl border border-black/10 bg-white/40 p-7 shadow-soft">
          <h3 class="font-serif text-2xl text-ink-950">{e.title}</h3>
          <div class="mt-3 space-y-1 text-sm text-ink-900/70">
            <div><span class="font-medium text-ink-950">Time: </span>{e.when}</div>
            <div><span class="font-medium text-ink-950">Place: </span>{e.where}</div>
          </div>
          <p class="mt-4 text-sm leading-7 text-ink-900/70">{e.summary}</p>
        </article>
      ))}
    </div>
  </Container>
</BaseLayout>
