---
const { eyebrow, title, subtitle } = Astro.props;
---
<div class="mx-auto max-w-2xl text-center">
  {eyebrow ? <div class="text-xs font-medium tracking-[0.2em] text-cinnabar-600">{eyebrow}</div> : null}
  <h2 class="mt-2 font-serif text-3xl tracking-wide text-ink-950 sm:text-4xl">{title}</h2>
  {subtitle ? <p class="mt-3 text-sm leading-7 text-ink-900/70">{subtitle}</p> : null}
</div>
